---
import type { MarkdownInstance } from "astro";
import type { PostFrontmatter, SEO } from "src/types";

import Button from "@/components/Button";
import PostCard from "@/components/PostCard";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { defaultSeo } from "@/seo";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const seo: SEO = structuredClone(defaultSeo);
seo.openGraph.url = canonicalURL.toString();
seo.openGraph.image = `${Astro.site?.href || "/"}images/banner.png`;

const featuredPosts = (
  await Astro.glob<MarkdownInstance<PostFrontmatter>>("../posts/*.{md,mdx}")
)
  .filter((post) => post.frontmatter.featured)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.publication_date).valueOf() -
      new Date(a.frontmatter.publication_date).valueOf()
  );
---

<BaseLayout seo={seo} includeNetlifyIdentity>
  <main>
    <div class="m-4 flex flex-col gap-10 lg:mx-14 lg:my-14 lg:flex-row">
      <div class="flex flex-1 flex-col md:mx-10 md:my-10 lg:mx-0">
        <h1
          class="bg-gradient-to-r from-indigo-600 to-pink-600 bg-clip-text text-6xl font-extrabold text-transparent"
        >
          Build<br />different.
        </h1>
        <p class="mt-10 text-2xl lg:w-[24rem]">
          Hi. I'm exposing
          <span class="font-semibold text-pink-600"> software</span>.
        </p>
        <div class="mt-10 flex gap-4">
          <a href="/blog">
            <Button>See my posts</Button>
          </a>
          <a href="/about">
            <Button variants={{ intent: "outline" }}>About me</Button>
          </a>
        </div>
      </div>
      <div
        class="flex flex-1 flex-col gap-3 bg-black p-4 font-mono text-lg text-white md:mx-10 lg:mx-0 lg:text-xl"
      >
        <p>
          <i class="fa-solid fa-chevron-right fa-xs text-indigo-500"></i> hxann info
        </p>
        <div class="flex gap-7">
          <div class="flex-1 shrink-0">
            <img
              src="https://res.cloudinary.com/an7/image/upload/v1656089853/blog/avatar_a8yy9u.jpg"
              class="aspect-square rounded-md object-cover"
            />
          </div>
          <div class="flex-[3]">
            <p>An Hoang</p>
            <a href="mailto:xuanan2001@pm.me" class="underline">
              xuanan2001@pm.me
            </a>
            <p>software</p>
          </div>
        </div>
        <p class="mt-7">
          <i class="fa-solid fa-chevron-right fa-xs text-indigo-500"></i> hxann links
        </p>
        <div class="flex flex-col items-start">
          <a href="/blog" class="underline">See my blog posts</a>
          <a href="/about" class="underline">About me</a>
          <a href="https://www.youtube.com/c/AnHoangXuan" class="underline">
            My YouTube Channel
          </a>
          <a href="https://github.com/intagaming" class="underline">
            My GitHub
          </a>
          <a href="https://github.com/intagaming/hxann.com" class="underline">
            This website's source code
          </a>
        </div>
      </div>
    </div>

    <div class="mx-4 my-10 md:mx-14 md:my-20">
      <h2 class="mb-4 text-2xl font-bold md:text-3xl">Featured posts</h2>

      <div class="flex flex-col gap-12 md:grid md:grid-cols-3">
        {
          featuredPosts.map((post) => (
            <PostCard post={post} direction="column" />
          ))
        }
      </div>

      <div class="mt-14 flex flex-col md:items-end">
        <a href="/blog">
          <Button variants={{ size: "mdLong" }}>
            <span>More posts</span>
            <span>â†’</span>
          </Button>
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
